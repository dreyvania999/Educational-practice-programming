<Window x:Class="UPM.TestEquip"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UPM"
         mc:Ignorable="d" Icon="/Resources/Basic resourses/image.ico" Style="{StaticResource WindowsMain}"
        Title="ООО «Телеком Нева Связь»" Height="400" Width="600" MinHeight="400" MinWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Проверка оборудования" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <ProgressBar  Width="500" Height="30" Name="pbLoading"/>
            <TextBlock Text="{Binding ElementName=pbLoading, Path=Value, StringFormat={}{0:0}%}" FontSize="18" HorizontalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="2">
            <Button HorizontalAlignment="Center" x:Name="btnPB" Content="Начать тестирование " Height="50" Width="300" Margin="20, 0, 0, 0" Template="{StaticResource ResourceKey=CTButonMainPage}" Style="{StaticResource ResourceKey=BtnStyle}" Click="btnPB_Click" Cursor="Hand"/>
        </Grid>
    </Grid>
</Window>
